{
  "name": "pbnj",
  "type": "module",
  "version": "1.0.0",
  "scripts": {
    "dev": "astro dev",
    "dev:cloudflare": "astro dev --config astro.config.cloudflare.mjs",
    "build": "astro build",
    "build:cloudflare": "astro build --config astro.config.cloudflare.mjs",
    "preview": "node dist/server/entry.mjs",
    "start": "node dist/server/entry.mjs",
    "deploy": "npm run build:cloudflare && wrangler d1 execute DB --remote --file=schema/schema.sql && wrangler deploy",
    "astro": "astro",
    "db:init": "node scripts/init-db.mjs"
  },
  "cloudflare": {
    "bindings": {
      "AUTH_KEY": {
        "type": "secret",
        "description": "Secret key for authenticating paste creation. Choose a secure random string."
      }
    }
  },
  "dependencies": {
    "@astrojs/cloudflare": "^12.6.12",
    "@astrojs/node": "^9.0.0",
    "astro": "^5.16.4",
    "better-sqlite3": "^11.6.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "highlight.js": "^11.11.1",
    "tailwind-merge": "^3.4.0"
  },
  "devDependencies": {
    "@astrojs/tailwind": "^6.0.2",
    "@types/better-sqlite3": "^7.6.11",
    "tailwindcss": "^3.4.18"
  }
}
